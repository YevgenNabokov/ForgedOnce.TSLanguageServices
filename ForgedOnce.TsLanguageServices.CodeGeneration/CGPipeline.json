{
  "codeFileHandlers": [
    { "type": "ForgedOnce.CSharp.CSharpCodeFileHandlerFactory, ForgedOnce.CSharp" },
    { "type": "ForgedOnce.TypeScript.TsCodeFileHandlerFactory, ForgedOnce.TypeScript" }
  ],
  "inputs": {
    "DefinitionTree": "CSharp:Project:ForgedOnce.TsLanguageServices.Model/DefinitionTree/*.cs",
    "TypeData": "CSharp:Project:ForgedOnce.TsLanguageServices.Model/TypeData/*.cs",
    "ResultModel": "CSharp:Project:ForgedOnce.TsLanguageServices.Model/ResultModel/*.cs",
    "Common": "CSharp:Project:ForgedOnce.TsLanguageServices.Model/CodeFile.cs;ForgedOnce.TsLanguageServices.Model/CodeGenerationTask.cs"
  },
  "batches": [
    {
      "name": "Batch01",
      "shadow": [ "CSharp:Project:ForgedOnce.TsLanguageServices.ModelBuilder/ExtensionMethods/*.cs" ],
      "stages": [
        {
          "name": "TypeScriptModelInterfaces",
          "plugin": {
            "pluginFactory": {
              "type": "ForgedOnce.TsLanguageServices.ModelTsInterfacesPlugin.PluginFactory, ForgedOnce.TsLanguageServices.ModelTsInterfacesPlugin",
              "config": {
                "modelBaseNamespace": "ForgedOnce.TsLanguageServices.Model",
                "outputFileName": "IntermediateModel.ts"
              }
            }
          },
          "input": {
            "settings": {
              "DefinitionTree": "*.cs",
              "TypeData": "*.cs",
              "ResultModel": "*.cs",
              "Common": "*.cs"
            }
          },
          "output": {
            "settings": {
              "PassThrough": "*"
            }
          },
          "outputStreamRenames": {
            "PassThrough": "TsModel"
          },
          "destinationMapping": {
            "PassThrough": {
              "name": "fileSystem",
              "settings": {
                "path": "..\\ForgedOnce.TsLanguageServices.TSBuilder"
              }
            }
          }
        },
        {
          "name": "BuilderDefinitionTree",
          "plugin": {
            "pluginFactory": {
              "type": "ForgedOnce.TsLanguageServices.BuilderDefinitionTreePlugin.PluginFactory, ForgedOnce.TsLanguageServices.BuilderDefinitionTreePlugin",
              "config": {
                "outputNamespace": "ForgedOnce.TsLanguageServices.ModelBuilder.DefinitionTree",
                "sourceNodeBaseType": "ForgedOnce.TsLanguageServices.Model.DefinitionTree.Node",
                "trackingCollectionType": "ForgedOnce.TsLanguageServices.ModelBuilder.DefinitionTree.BuilderNodeCollection<>",
                "destinationNodeBaseType": "ForgedOnce.TsLanguageServices.ModelBuilder.DefinitionTree.Node",
                "typesToSkip": "ForgedOnce.TsLanguageServices.Model.DefinitionTree.Node",
                "allowedModificationCheckMethodName": "EnsureIsEditable"
              }
            }
          },
          "input": {
            "settings": {
              "DefinitionTree": "*.cs"
            }
          },
          "output": {
            "settings": {
              "PassThrough": "*"
            }
          },
          "outputStreamRenames": {
            "PassThrough": "BuilderTree"
          },
          "destinationMapping": {
            "PassThrough": {
              "settings": { "path": "ForgedOnce.TsLanguageServices.ModelBuilder/DefinitionTree/Generated" }
            }
          },
          "cleanDestinations": true
        }
      ]
    },
    {
      "name": "Batch02",
      "stages": [
        {
          "name": "BuilderExtensionMethods",
          "plugin": {
            "pluginFactory": {
              "type": "ForgedOnce.TsLanguageServices.SyntaxTreeExtensionsPlugin.PluginFactory, ForgedOnce.TsLanguageServices.SyntaxTreeExtensionsPlugin",
              "config": {
                "outputNamespace": "ForgedOnce.TsLanguageServices.ModelBuilder.ExtensionMethods",
                "requiredClassBaseType": "ForgedOnce.TsLanguageServices.ModelBuilder.DefinitionTree.Node",
                "typesToUnfold": "ForgedOnce.TsLanguageServices.ModelBuilder.DefinitionTree.Identifier;ForgedOnce.TsLanguageServices.ModelBuilder.DefinitionTree.TypeReferenceId",
                "ignorePropertyNames": "Parent",
                "unpluralizeVariables": "true"
              }
            }
          },
          "input": {
            "settings": {
              "BuilderTree": "*.cs"
            }
          },
          "output": {
            "settings": {
              "PassThrough": "*"
            }
          },
          "destinationMapping": {
            "PassThrough": {
              "settings": { "path": "ForgedOnce.TsLanguageServices.ModelBuilder/ExtensionMethods/Generated" }
            }
          },
          "cleanDestinations": true
        }
      ]
    }
  ]
}
